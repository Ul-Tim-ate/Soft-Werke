<mvc:View
		controllerName="sap.ui.unified.sample.CalendarSpecialDaysLegend.CalendarSpecialDaysLegend"
		xmlns:l="sap.ui.layout"
		xmlns:u="sap.ui.unified"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		class="viewPadding">
		<l:VerticalLayout>
			<u:Calendar id="calendar" legend="legend"  months="12" intervalSelection="true" showWeekNumbers="false" width="100%"/>
			<u:CalendarLegend id="legend"/>
			<ToggleButton text="Special Days" press="handleShowSpecialDays"/>
		</l:VerticalLayout>
</mvc:View>